    <!-- 引入 QRCode.js 库 -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 颜色选择
            const colorOptions = document.querySelectorAll('.color-option');
            let selectedColor = '000000';
            
            colorOptions.forEach(option => {
                option.addEventListener('click', function() {
                    colorOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedColor = this.dataset.color;
                    
                    // 如果已经有生成的结果，更新二维码颜色
                    if (document.getElementById('result').style.display === 'block') {
                        generateQRCode();
                    }
                });
            });
            
            // 生成防红链接
            document.getElementById('generateBtn').addEventListener('click', function() {
                const originalUrl = document.getElementById('originalUrl').value.trim();
                
                if (!originalUrl) {
                    alert('请输入目标网址');
                    return;
                }
                
                // 简单的防红链接生成逻辑（实际使用时可能需要后端支持）
                const antiRedUrl = `https://${window.location.hostname}/jink.htm/c=${btoa(originalUrl)}`;
                
                document.getElementById('antiRedUrl').textContent = antiRedUrl;
                document.getElementById('result').style.display = 'block';
                
                // 生成二维码
                generateQRCode();
            });
            
            // 生成二维码函数
            function generateQRCode() {
                const antiRedUrl = document.getElementById('antiRedUrl').textContent;
                if (!antiRedUrl) return;
                
                const qrcodeElement = document.getElementById('qrcode');
                qrcodeElement.innerHTML = '';
                
                QRCode.toCanvas(qrcodeElement, antiRedUrl, {
                    width: 180,
                    color: {
                        dark: `#${selectedColor}`,
                        light: '#ffffff'
                    }
                }, function(error) {
                    if (error) console.error(error);
                });
            }
        });
    </script>
